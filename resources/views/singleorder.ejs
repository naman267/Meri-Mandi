  <h1 style="padding-top: 10vh; text-align: center"> Current Vegetable</h1>
    <!---------------CARD-->
    
    </br>
    <div class="veg-card shadow-lg p-3 bg-white rounded border border-dark mx-auto" style="width: 90%; height: 65%">
        <!-- <img class="rounded border border-dark"src="/o.jpg" class="card-img-top" alt="..."> -->
        <div style="display: flex;flex-direction: column;align-items: center;justify-content: space-evenly;">
          <img width="250px" height="200px" class="rounded border border-dark" src="data:image/<%=item.img.contentType%>;base64,
          <%=item.img.data.toString('base64')%>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%=item.name%></h5>
            <h6>Description-</h6>
            <p class="mx-auto card-text"><%=item.desc%></p>
          </div>
        </div>

        <ul class="list-group list-group-flush">
          <li id="<%=item.FarmerId %>"class="mx-auto singleOrder list-group-item">Name-<%=item.FarmerId.name%></li>
          <li class="mx-auto list-group-item">Adderess-<%=item.FarmerId.address%></li>
          <li class="mx-auto list-group-item">Phone-<%=item.FarmerId.phone%></li>
          <li class="mx-auto list-group-item">Price per kg-<%=item.price%></li>
        </ul>

        <div style="height: 80%; display: flex; flex-direction: column; align-items: center; justify-content: space-evenly;">
          Quantity(in grams)-<input id="quantity" type="text" placeholder="250">
           Phone-<input id="phone"  type="text" placeholder="*********">
           Adderess-<input id="address"  type="text" placeholder="1234 street">
          <button  class="OrderNow" data-item="<%=JSON.stringify(item)%>" style="background-color: darkgray;">Order Now</button>          
        </div>
      </div>
   
