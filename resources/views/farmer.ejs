  <h1 style="position:fixed;margin-left:60px; margin-top:300px;"> My Vegetables</h1>
    <!---------------CARD-->
    <% items.forEach(item=>{ %>
    </br>
    <div class="shadow-lg p-3 mb-5 bg-white rounded border border-dark card mx-auto " style="width: 18rem; margin-top:60px;">
      <% if(item.status==='Available') { %>
      <h4 style="background-color: green;"class=" text-white text-center"><%=item.status%>  </h4>
   
    <%}else {%>
      <h4 style="background-color: gray;" class="text-white text-center"><%=item.status%>  </h4>
      <%}%>
      <img class="rounded border border-dark" src="data:image/<%=item.img.contentType%>;base64,
      <%=item.img.data.toString('base64')%>" class="card-img-top" alt="...">
        <div class="card-body">

          <h5 class="card-title"><%= item.name %></h5>
          <h6>Description-</h5>
          <p class="mx-auto card-text"><%=item.desc%></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="mx-auto list-group-item">Name-<%=user.name%></li>
          <li class="mx-auto list-group-item">Adderess- <%=user.address%></li>
          <li class="mx-auto list-group-item">Phone-<%=user.phone%></li>
          <li class="mx-auto list-group-item">Price Per Kg<%=item.price%></li>
        </ul>
        <div class="card-body mx-auto">
          <label for="status">Change Status</label>
                            <select id="<%=JSON.stringify(item)%>" onchange="changeVegetableStatus(this)">
                            <option  value="<%=item.status%>"><%=item.status%></option>
                            <option value="Available">Available</option>
                            <option value="Out Of Stock">Out Of Stock</option>
                        </select>
    
        </div>
      </div>
    </br>
      <%})%>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
   <script src="/js/app.js"></script>
    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
