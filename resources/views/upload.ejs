        <div class="container">
          <h1>Upload Your Vegetable</h1>
          <form action="/upload" method="POST" enctype="multipart/form-data"  style="max-width:70%;" 
            class="px-4 mx-auto mt-1" style="display: flex; flex-direction: column; align-items: center; justify-content: space-evenly;">
        
       
            <div class="mt-3 form-group">
                <label for="vegetablename">Vegetable Name</label>
                <input name="name" type="text" class="form-control" id="vegetablename" placeholder="Tomato">
              </div>
              <div class="mt-3 form-group">
                <label for="exampleFormControlTextarea1">Description</label>
                <textarea name="desc"class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>
              <div class="mt-3 form-group">
                <label for="price">Price Per Kg</label>
                <input name="price" type="name" class="form-control" id="price" placeholder="50">
              </div>
              
            <div class="upload-container" style="margin-top: 8px;">
              <div class="border-container">
                <div class="icons fa-4x">
                  <i class="fas fa-file-image" data-fa-transform="shrink-3 down-2 left-6 rotate--45"></i>
                  <i class="fas fa-file-alt" data-fa-transform="shrink-2 up-4"></i>
                  <i class="fas fa-file-pdf" data-fa-transform="shrink-3 down-2 right-6 rotate-45"></i>
                </div>
                <!--<input type="file" id="file-upload">-->
                <div class="mt-3 form-group">
                  <label for="image">Upload Image</label>
                  <input type="file" id="image"
                         name="image" value="" required>
              </div>
